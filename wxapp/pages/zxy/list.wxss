/* pages/zxy/list.wxss */

.list-block__showLayer {
  display: flex;
  flex-direction: row;
  margin: 50rpx;
  align-content: center;
  align-items: center;
}

.list-title {
  font-size: 14px;
  width: 100rpx;
}

.list-title-show,
.list-title-edit-area {
  font-size: 14px;
  flex-basis: 40%;
}

.list-title-edit-area > input{
  height: 60rpx;
  line-height: 60rpx;
  border: 1rpx solid #eee;
  padding: 4 10rpx;
  width: 240rpx;
}

.list-control-edit-btn {
  width: 150rpx;
  font-size: 20rpx;
}

.list-control-delete-btn {
  width: 150rpx;
  margin-left: 20rpx;
  font-size: 20rpx;
}
