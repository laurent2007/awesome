/**index.wxss**/

swiper {
  width: 100%;
  height: 350rpx;
}

swiper image {
  display: block;
  width: 100%;
  height: 100%;
}

/*items-list*/

.items-list {
}

.pro-item {
  overflow: hidden;
  padding: 30rpx;
}

.pro-logo {
  float: left;
  width: 190rpx;
  height: 190rpx;
}

.pro-body {
  margin-left: 220rpx;
}

.pro-title {
  color: #212121;
  font-size: 34rpx;
  line-height: 1;
}

.pro-desc {
  color: #9a9a9a;
  font-size: 26rpx;
  line-height: 1;
}

.pro-footer {
  overflow: hidden;
}

.btn-detail {
  width: 170rpx;
  height: 52rpx;
  float: left;
}

.btn-ask {
  width: 224rpx;
  height: 52rpx;
  float: left;
  margin-left: 20rpx;
  line-height: 1;
  padding: 0;
}

.btn-ask image {
  width: 100%;
  height: 100%;
}

.search-city {
  margin: 10rpx;
  display: flex;
  flex-direction: row;
}

.city-button {
  color: #fff;
  background: #999;
  width: 160rpx;
  font-size: 14px;
  margin-left: 24rpx;
  margin-top: 20rpx;
  margin-bottom: -10rpx;
}

.city-content {
  display: flex;
  flex: 1;
  flex-direction: column;
  align-content: center;
  align-self: center;
}

.city-text {
  color: #999;
  font-size: 14px;
  margin-left: 20rpx;
  margin-top: 30rpx;

}
